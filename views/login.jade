extends layout

block content
  h1 Login
  p Please Login below
  form(method='post', action='/users/login')
    .form-group
      label Username
      input.form-control(name='username', type='text', placeholder='Username')
    .form-group
      label Password
      input.form-control(name='password', type='password', placeholder='Password')
    button.btn.btn-default(name='submit' type='submit' value='Login') Login
